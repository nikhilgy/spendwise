{
    "meta": {
      "source": "Neobank-dashboard UI screenshots (Hexa-style, 2025-06-26)",
      "purpose": "Self-contained design-system profile that another AI/LLM can ingest to recreate matching screens or component libraries in a PRD or code-gen flow.",
      "version": "1.0"
    },
  
    "designLanguage": {
      "lookAndFeel": "Modern neobank aesthetics: stark navy accents on bright, near-white surfaces, soft shadows, rounded corners and crisp data-visualisation. The mood is professional yet friendly, balancing trust with lightweight minimalism.",
      "fontFamily": {
        "primary": {
          "name": "Inter",
          "fallback": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
          "weights": [400, 500, 600, 700],
          "lineHeightScale": 1.4,
          "letterSpacing": "-0.15px"
        }
      },
      "color": {
        "palette": {
          "navy":          "#04102D",
          "teal":          "#6F9F9F",
          "tealLight":     "#C5D6D6",
          "mint":          "#E5F3EE",
          "blueBar":       "#1C2C65",
          "greenBar":      "#5BAB9C",
          "warningOrange": "#FFB25C",
          "successGreen":  "#45C08D",
          "errorRed":      "#EA5A6B",
          "neutral000":    "#FFFFFF",
          "neutral050":    "#F4F5F7",
          "neutral100":    "#ECEEF1",
          "neutral200":    "#DADDE2",
          "neutral300":    "#B8BCC6",
          "neutral400":    "#969BA7",
          "neutral500":    "#6E7380"
        },
        "usage": {
          "background":        "neutral050",
          "surface":           "neutral000",
          "primaryText":       "navy",
          "secondaryText":     "neutral500",
          "disabledText":      "neutral300",
          "primaryAction":     "navy",
          "primaryActionHover":"rgba(4,16,45,0.08)",
          "positive":          "successGreen",
          "negative":          "errorRed",
          "warning":           "warningOrange"
        },
        "elevation": {
          "cardShadow":  "0 2px 6px rgba(4,16,45,0.06)",
          "popoverShadow":"0 8px 24px rgba(4,16,45,0.14)"
        }
      },
      "spacing": {
        "scalePx": [4, 8, 12, 16, 24, 32, 48],
        "radii": {
          "xs": 4,
          "sm": 8,
          "md": 12,
          "lg": 20,
          "pill": 999
        }
      },
      "iconography": {
        "style": "24 Ã— 24 px, 2-px stroke, squared-off terminals",
        "cornerRadius": 2
      },
      "motion": {
        "durationMs": { "fast": 100, "base": 200, "slow": 350 },
        "easing": {
          "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
          "overshoot": "cubic-bezier(0.34, 1.56, 0.64, 1)"
        }
      }
    },
  
    "layout": {
      "grid": {
        "columns": 12,
        "gutterPx": 24,
        "outerMarginPx": 48,
        "breakpoints": {
          "mobile": 0,
          "tablet": 768,
          "desktop": 1280
        }
      },
      "navigation": {
        "type": "left-rail",
        "widthPx": 256,
        "collapsedWidthPx": 80,
        "background": "navy",
        "activeItemIndicator": {
          "shape": "pill",
          "color": "neutral000",
          "heightPx": 40
        }
      },
      "topBar": {
        "heightPx": 56,
        "background": "navy",
        "contents": ["promoBanner", "searchField", "userControls"]
      }
    },
  
    "components": {
      "paymentCard": {
        "size": { "widthPx": 240, "heightPx": 152 },
        "cornerRadius": "lg",
        "backgroundGradient": [
          { "color": "navy", "stop": 0 },
          { "color": "teal", "stop": 100 }
        ],
        "textStyle": { "color": "neutral000", "weight": 500 }
      },
  
      "summaryMetric": {
        "minWidthPx": 180,
        "paddingPx": 24,
        "borderRadius": "md",
        "shadow": "cardShadow",
        "valueTextStyle": { "sizePx": 28, "weight": 700 },
        "trend": {
          "positiveColor": "successGreen",
          "negativeColor": "errorRed",
          "icon": "arrow-trend"
        }
      },
  
      "quickActionButton": {
        "variant": "ghost",
        "shape": "square",
        "sizePx": 64,
        "iconSizePx": 24,
        "borderRadius": "sm",
        "background": "neutral100",
        "hoverOverlay": "primaryActionHover"
      },
  
      "progressBar": {
        "heightPx": 8,
        "trackColor": "neutral200",
        "fillColor": "teal",
        "cornerRadius": "pill"
      },
  
      "dataChart": {
        "bar": {
          "seriesColors": ["blueBar", "greenBar", "navy"],
          "strokeWidthPx": 0,
          "cornerRadiusPx": 2
        },
        "axis": {
          "labelTextStyle": { "sizePx": 12, "color": "neutral400" },
          "strokeColor": "neutral200"
        }
      },
  
      "table": {
        "rowHeightPx": 48,
        "headerBackground": "neutral050",
        "hoverBackground": "neutral100",
        "borderColor": "neutral200",
        "textStyle": { "sizePx": 14, "color": "primaryText" }
      }
    },
  
    "accessibility": {
      "contrastRatioMin": 4.5,
      "focusRing": {
        "widthPx": 2,
        "color": "#4C9AFF",
        "offsetPx": 2
      },
      "touchTargetMinPx": 44
    }
  }
  